{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "Desktop Weather Channel",
  "version": "0.8.1",

  "description": "Check your local weather with one click, very fast and secure! â€¨Check your daily weather on your current location.",

  "icons": {
    "16": "appicons/sunce16x16.png",
    "48": "appicons/sunce48x48.png",
    "128": "appicons/sunce128x128.png"
  },

  "browser_action": {
    "default_icon": "appicons/sunce128x128.png",
    "default_popup": "popup.html",
    "default_title": "Click to open Weather information"
  },

  "author": "Weather Apps",
  "background": {
    "persistent": false,
    "scripts": [ "jquery.min.js","options.js" ]
  },

  "optional_permissions": ["tabs"],
  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },

  "permissions": [
    "tabs",
    "geolocation",
    "storage",
    "http://*/",
    "https://*/"
  ],
  "version_name": "0.8.1"

}