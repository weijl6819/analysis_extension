{
"update_url": "https://clients2.google.com/service/update2/crx",

  "version": "0.1.8",
  "name": "Block Site",
  "manifest_version": 2,
  "short_name": "block-site",
  "background": {"scripts": ["background.js"]},
  "description": "Easily block websites of your choice!",
  "homepage_url": "http://mybrowseraddon.com/block-site.html",
  "options_ui": {"chrome_style": true, "page": "data/options/options.html"},
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>",
    "webRequest",
    "contextMenus",
    "notifications",
    "webRequestBlocking"
  ],
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
