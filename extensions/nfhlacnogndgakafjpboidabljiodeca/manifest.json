{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "Dark Dino",
  "short_name": "Make error pages dark",
  "description": "Replace the default error pages on Google Chrome web browser to a darker version (night mode).",
  "version": "1.3",
  "version_name": "1.3 beta",
  "background": {
    "scripts": ["bg.js"],
    "persistent": false
  },
  "icons": {
  "128": "icon128.png"
  },
  "offline_enabled": true,
  "incognito": "split",
  "permissions": [
    "webNavigation",
    "tabs",
    "*://*/"
  ]
}
