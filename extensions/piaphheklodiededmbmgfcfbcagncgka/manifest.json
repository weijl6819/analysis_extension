{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "__MSG_appName__",
    "description": "__MSG_description__",
    "short_name": "__MSG_short_name__",
    "options_page": "options.html",
    "version": "1.3.5",
    "default_locale": "en",
    "background": {
        "page": "background.html"
    },
    "page_action": {
        "default_icon": {
            "128": "icon_128.png"
        },
        "default_title": "__MSG_appName__",
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "popup.html",
        "open_in_tab": true,
        "chrome_style": true
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "contentscript.bundle.js"
            ]
        }
    ],
    "icons": {
        "128": "icon_128.png"
    },
    "manifest_version": 2,
    "permissions": [
        "http://*/*",
        "https://*/*",
        "storage",
        "contextMenus",
        "webRequest",
        "webRequestBlocking",
        "tabs"
    ]
}