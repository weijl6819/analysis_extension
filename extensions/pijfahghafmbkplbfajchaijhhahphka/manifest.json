{
  "version": "1.7.0",
  "background": {
    "page": "background/background.html",
    "persistence": false
  },
  "browser_action": {
    "default_icon": "images/icons/icon_16.png",
    "default_title": "Awwwards Bookmark Extension"
  },
  "content_scripts": [
    {
      "all_frames": false,
      "js": [
        "front/js/front.min.js"
      ],
      "css": [
        "front/style/types.css"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://awwwards.com https://www.google-analytics.com; object-src 'self'",
  "description": "Capture your inspiration! ",
  "icons": {
    "16": "images/icons/icon_16.png",
    "48": "images/icons/icon_48.png",
    "128": "images/icons/icon_128.png"
  },
  "manifest_version": 2,
  "homepage_url": "https://www.awwwards.com",
  "name": "Awwwards",
  "permissions": [
    "*://www.awwwards.com/*",
    "http://*.facebook.com/*",
    "https://fonts.googleapis.com/*",
    "file:///*",
    "http://*/*",
    "https://*/*",
    "<all_urls>",
    "clipboardWrite",
    "alarms",
    "tabs",
    "identity",
    "tabCapture",
    "cookies",
    "notifications",
    "desktopCapture",
    "storage",
    "contextMenus",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "unlimitedStorage",
    "bookmarks",
    "background"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "web_accessible_resources": [
    "images/*.png",
    "images/*.gif",
    "images/*.jpg",
    "images/icons@2x.png",
    "fonts/*.ttf",
    "front/style/content.css",
    "front/style/fa/fonts/*.*"
  ],
  "minimum_chrome_version": "20.0",
  "externally_connectable": {
    "matches": [
      "*://*.awwwards.com/*"
    ]
  }
}
