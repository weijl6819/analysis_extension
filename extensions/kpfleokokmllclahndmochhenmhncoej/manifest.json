{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2,
    "name": "WCAG Accessibility Audit Developer UI",
    "short_name": "WCAG Access Audit",
    "version": "2.1.2.1",

    "description": "Better UI for Accessibility Developer Tools API",
    "icons": {
        "16": "/images/logos/16.png",
        "24": "/images/logos/24.png",
        "32": "/images/logos/32.png",
        "48": "/images/logos/48.png",
        "64": "/images/logos/64.png",
        "128": "/images/logos/128.png"
    },

    "browser_action": {
        "default_icon": "/images/logos/24.png",
        "default_popup": "/inc/html/popup.html"
    },

    "background": {
        "page": "/inc/html/background.html",
        "persistent": true
    },

    "options_page": "/inc/html/options.html",

    "permissions": [
        "tabs", "activeTab", "<all_urls>", "https://*/*", "storage", "contentSettings", "clipboardRead", "clipboardWrite"
    ],

    "web_accessible_resources": [
        "/fonts/*.woff2",
        "/images/*.png",
        "/images/*.gif",
        "/images/logos/*.png",
        "/images/logos/*.ico",
        "/images/cursors/*.cur",
        "/inc/css/*.css",
        "/inc/css/*.xsl",
        "/inc/js/*.js",
        "/inc/html/*.html",
        "/inc/boostrap/css/*.*",
        "/inc/boostrap/fonts/*.*",
        "/inc/boostrap/js/*.*"
    ],
    "content_security_policy": "script-src 'self' https://maxcdn.bootstrapcdn.com https://ssl.google-analytics.com/ga.js; object-src 'self'"

}