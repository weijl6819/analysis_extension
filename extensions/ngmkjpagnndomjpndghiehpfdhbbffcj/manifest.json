{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,

  "name": "Veritai Plugin",
  "description": "This extension automatically checks the political bias of a news article using Artificial Intelligence.",
  "version": "0.1.4",

  "icons": {
    "16": "48x48.png",
    "48": "128x128.png",
    "128": "128x128.png"
  },

  "content_scripts": [{
    "css": ["css/auto_content_script.css"],
    "js": ["js/auto_content_script.js"],
    "matches": [
      "http://www.foxnews.com/*/*",
      "http://www.cnn.com/*/*",
      "http://www.breitbart.com/*/*",
      "https://www.nytimes.com/*/*",
      "https://www.wsj.com/articles/*",
      "http://www.huffingtonpost.com/entry/*",
      "http://www.washingtontimes.com/news/*",
      "https://www.apnews.com/*/*",
      "http://www.bbc.com/*/*",
      "http://www.npr.org/*/*",
      "http://www.latimes.com/*/*",
      "http://www.politico.com/*/*/*",
      "http://time.com/*/*",
      "https://www.usatoday.com/*/*",
      "http://www.nbcnews.com/*/*",
      "http://www.msnbc.com/*/*",
      "https://www.infowars.com/*/*",
      "https://www.buzzfeed.com/*/*",
      "http://www.politifact.com/*/*/*",
      "https://www.reuters.com/article/*",
      "https://www.washingtonpost.com/*/*"
    ],
    "run_at": "document_end"
  }],

  "web_accessible_resources": [
    "*.html",
    "fonts/*",
    "images/*",
    "css/*.css",
    "js/*.js"
  ],

  "browser_action": {
    "default_icon": "48x48.png",
    "default_popup": "default_popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/",
    "notifications",
    "background",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "background":
  {
    "scripts":["js/background.js"]
  }
}