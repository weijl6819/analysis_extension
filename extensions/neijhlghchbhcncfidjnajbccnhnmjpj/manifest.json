{
"update_url": "https://clients2.google.com/service/update2/crx",

	"browser_action": {
		"default_title": "WIU Libraries Research Panel",
		"default_popup": "popup.html",
		"default_icon": {
			"16": "/icons/w16.png"
		}
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
	"permissions": [ "http://www.google.com/*", "activeTab", "tabs", 
		"https://www.google-analytics.com/", "storage"
	],
	"manifest_version": 2,
	"default_locale": "en",
    "name": "WIU Libraries Research Panel",
	"description": "A Chrome extension panel assisting research & scholarship at WIU Libraries.",
	"author": "Isaac Hunter Dunlap (WIU Libraries Systems & Digitization)",
	"version": "0.4",
	"icons": { "48": "/icons/w48.png", "128": "/icons/w128.png" }
}