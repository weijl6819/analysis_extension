{
   "background": {
      "persistent": false,
      "scripts": [ "background.js" ]
   },
   "browser_action": {
      "default_icon": "icons/logo_32x32.png",
      "default_title": "Fav at FancyHype"
   },
   "content_scripts": [ {
      "js": [ "fetcher.js", "styler.js" ],
      "matches": [ "http://*/*", "https://*/*" ]
   } ],
   "description": "Discover favorite items from online stores/shops and click Fav Button to save at FancyHype",
   "icons": {
      "16": "icons/logo_32x32.png",
      "48": "icons/logo_48x48.png",
      "128": "icons/logo_128x128.png"
   },
   "manifest_version": 2,
   "name": "Fancy Bookmarklet",
   "permissions": [ "tabs", "http://*/*", "https://*/*", "background" ],
   "update_url": "https://clients2.google.com/service/update2/crx",
   "version": "1.0",
   "web_accessible_resources": [ "icons/logo.gif", "icons/close.png", "style.css" ]
}
