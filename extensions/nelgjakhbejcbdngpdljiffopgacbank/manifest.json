{
"update_url": "https://clients2.google.com/service/update2/crx",


  "name": "Weather (forecast)",
  "short_name": "Weather",
  "version": "1.0.40",
  "manifest_version": 2,
  "description": "Best weather forecast extension for Chrome, simple and beautiful.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Weather",
    "default_popup": "popup.html"
  },
  "permissions": [
  	"idle",
  	"alarms",
  	"geolocation",
    "storage",
  	"notifications",
  	"<all_urls>"
  ],
  "content_security_policy": "script-src 'self' https://s3-us-west-2.amazonaws.com https://query.yahooapis.com https://fonts.googleapis.com; object-src 'self'"
}