{
"update_url": "https://clients2.google.com/service/update2/crx",

	"name": "__MSG_appName__",
	"version": "1.0.7.2",
	"manifest_version": 2,
	"default_locale": "en",
	"description": "__MSG_appDesc__",
    "minimum_chrome_version": "23",
	"permissions" : 
    [
        "tabs", 
        "http://*/*",
		"https://www.facebook.com/",
		"http://500px.com/",
		"http://pinterest.com/"
	],
    "background" : 
    {
        "page": "background.html"
    },
	"page_action" : 
    {
        "default_title": "Save pics",
        "default_icon": "18.png",
        "default_popup": "popup.html"
    },
    "icons" : 
    {
        "16": "18.png",
        "48": "icons_48.png",
        "128": "icon_128.png"
    },        
    "content_scripts" : 
    [
        {
            "matches" : 
            [
                "http://*/*",
                "https://*/*"
            ],
            "js" : ["content.js"],
            "run_at" : "document_idle",
            "all_frames" : false
        }
    ]
}