{
   "background": {
      "persistent": false,
      "scripts": [ "background.js"]
   },
   "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

   "browser_action": {
      "default_icon": "icon.png",
      "name": "Highlight Keywords for Google Search"
   },
   "content_scripts": [ {
      "css": [ "SearchHighlight.css" ],
      "js": [ "jquery/jquery-1.12.4.min.js","SearchHighlight.js" ],
      "matches": [ "http://*/*","https://*/*" ]
   } ],
   "default_locale": "en",
   "description": "__MSG_chrome_extension_description__",
   "icons": {
      "128": "icons/highlight128.png",
      "16": "icons/highlight16.png",
      "48": "icons/highlight48.png"
   },
   "manifest_version": 2,
   "name": "__MSG_chrome_extension_name__",
   "permissions": [ "windows", "tabs", "http://*/*", "https://*/*" ],
   "update_url": "http://clients2.google.com/service/update2/crx",
   "version": "5.0.21"
}
