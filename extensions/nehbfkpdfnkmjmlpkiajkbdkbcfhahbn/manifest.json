{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,

  "name": "HashTest - Realtime Hashtag Testing",
  "short_name": "HashTest",
  "description": "Find the best hashtags while you type, with real time color-based quality scores.",
  "version": "1.0.4",
  "icons": { "16": "hash16.png", "48": "hash48.png", "128": "hash128.png"},

  "browser_action": {
    "default_icon": "hash16.png",
    "default_popup": "popup.html"
  },
  
  "permissions": [
    "activeTab"
  ]
}